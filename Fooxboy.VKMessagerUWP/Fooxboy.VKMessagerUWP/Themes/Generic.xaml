<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Fooxboy.VKMessagerUWP.Controls"
    xmlns:local="using:Fooxboy.VKMessagerUWP">

    <Style TargetType="controls:TwoFactorAuthorizationContentDialog" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TwoFactorAuthorizationContentDialog">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
