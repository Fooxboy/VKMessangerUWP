<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fooxboy.VKMessagerUWP.Resources.Styles">


    <AcrylicBrush x:Key="AcrylicLoginGrid"
                  BackgroundSource="Backdrop"
                  TintOpacity="0.5" 
                  TintColor="White"
                  FallbackColor="White" />

    <AcrylicBrush x:Key="AcrylicDialogGrid"
                  BackgroundSource="Backdrop"
                  TintOpacity="0.5" 
                  TintColor="White"
                  FallbackColor="#A6A6A6" />

    <AcrylicBrush x:Key="AcrylicBackgroundDialogsGrid"
                  BackgroundSource="HostBackdrop"
                  TintOpacity="0.6"
                  TintColor="White"
                  FallbackColor="#D6D6D6" />

    <AcrylicBrush x:Key="AcrylicButtonSendMsg"
                  BackgroundSource="Backdrop"
                  TintOpacity="0.5" 
                  TintColor="#5B88BD"
                  FallbackColor="#5B88BD" />


</ResourceDictionary>
